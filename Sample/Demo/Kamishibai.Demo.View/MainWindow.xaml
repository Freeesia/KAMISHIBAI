<Window x:Class="Kamishibai.Demo.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view1="clr-namespace:Kamishibai.Demo.View"
        xmlns:kamishibai="clr-namespace:Kamishibai;assembly=Kamishibai.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        d:DataContext="{d:DesignInstance {x:Type view1:DesignMainWindowViewModel}, IsDesignTimeCreatable=True}"
        Background="Black">
    <Grid Margin="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Orientation="Vertical" Background="White">
            <TextBlock Text="Default Frame" Margin="10"/>
            <kamishibai:NavigationFrame/>
        </StackPanel>
        <StackPanel Grid.Column="2" Orientation="Vertical" Background="White">
            <TextBlock Text="{Binding SecondFrameName}" Margin="10"/>
            <kamishibai:NavigationFrame FrameName="{Binding SecondFrameName}"/>
        </StackPanel>
    </Grid>
</Window>
