<Window x:Class="Kamishibai.Demo.View.ChildWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:Kamishibai.Demo.View"
        xmlns:kamishibai="clr-namespace:Kamishibai;assembly=Kamishibai.View"
        mc:Ignorable="d"
        Title="ChildWindow" Height="450" Width="800"
        d:DataContext="{d:DesignInstance {x:Type view:DesignChildWindowViewModel}, IsDesignTimeCreatable=True}">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="{Binding Message}"/>
        <Button Content="Open Window" Margin="5" Command="{Binding OpenWindowCommand}" CommandParameter="{kamishibai:Window}"/>
        <Button Content="Open Dialog" Margin="5" Command="{Binding OpenDialogCommand}"/>
        <Button Content="Close Window" Margin="5" Command="{Binding CloseWindowCommand}"/>
        <Button Content="Close Dialog" Margin="5" Command="{Binding CloseDialogCommand}"/>
    </StackPanel>
</Window>
